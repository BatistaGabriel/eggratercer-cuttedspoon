root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.java]
indent_size = 4

[*.{xml,pom}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.properties]
indent_style = space
indent_size = 2

[*.log]
trim_trailing_whitespace = false

[*.json]
indent_size = 2

[*.yml]
indent_size = 2
